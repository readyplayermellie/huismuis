{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "vue/multi-word-component-names": "off",
        "vue/object-curly-spacing": [2, "always"],
        "vue/html-closing-bracket-spacing": [2, {
        "selfClosingTag": "always"
        }],
        "vue/max-attributes-per-line": [2, {
        "singleline": {
            "max": 1
        },
        "multiline": {
            "max": 1
        }
        }],
        "semi": [2, "never"]
    }
}